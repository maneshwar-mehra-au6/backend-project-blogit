{{#if data}}
<br>
<h1 style="text-align: center;">PUBLIC BLOGS ARE</h1>

{{#each data}}
<div class="BLOG">
  <label>Title:</label>
  <div class="x">{{this.Blogtitle}}</div>
<br>
<label>About:</label>
<div class="x">{{this.explain}}</div>

<br>
<div class="d-flex justify-content-between">
{{#each this.image}}
<img class="blogimage"src="./{{this.image}}" width="200px" height="200px">
{{/each}}
<br>
<div class="d-flex align-items-end flex-column bd-highlight mb-3 y">
<a class="btn btn-primary" href="/like?id={{this._id}}">{{this.like.length}}LIKE</a>&nbsp&nbsp<a class="btn btn-primary" href="/dislike?id={{this._id}}">{{this.dislike.length}}DISLIKE</a>&nbsp&nbsp
<a class="btn btn-primary" href="/comment?id={{this._id}}">COMMENT</a>
</div>
</div>

</div>

{{/each}}
{{else}}
<h1 style="color: sandybrown;">  BLOCK ARE NOT PUBLICLY CREATED YET</h1>
{{/if}}