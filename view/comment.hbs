<form action="/comment?id={{id}}" method="POST">
<label for="comment">
    comment
</label>
<input type="text" id="comment" name="comment" value="{{comment}}" required>
<span>{{error.comment}}</span>
<button type="submit">SUBMIT</button>
</form>
<hr>
<dir class="z">
{{#each data}}
<label>name:</label>
<div class="x">{{this.name}}</div>
<br>
<label>comment:</label>
<div class="x">{{this.comments}}</div>
<div class="d-flex align-items-end flex-column bd-highlight mb-3 y">
<a class="btn btn-primary" style="margin-top: -20px;" href="/deletecomment?id={{this.id}}">DELETE</a>
</div>
<br>
<hr>
{{else}}
<h1>NO COMMENT YET</h1>
</dir>
{{/each}}
