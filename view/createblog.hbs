<form action="/createblog" method="POST" enctype="multipart/form-data">
<div class="container">
    <div class="Blogtitle">
    TITLE:<input type="text" name="Blogtitle" value="{{Blogtitle}}">
    <span>{{error.Blogtitle}}</span>
    </div>
    <div class="explain">
    {{!-- ABOUT:<textarea name="comment" form="usrform" name="explain" value="{{explain}}" rows="8" cols="50"></textarea> --}}
